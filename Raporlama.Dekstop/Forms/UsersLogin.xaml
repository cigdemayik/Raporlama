<Window x:Class="Raporlama.Desktop.Forms.UsersLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raporlama.Desktop.Forms"
        mc:Ignorable="d"
        Title="Kullanıcı Girişi" Height="374" Width="369" Background="#04c582" FontSize="20" WindowStartupLocation="CenterScreen">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Giriş" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Kullanıcı Adı:" Foreground="White"></Label>
            <TextBox Name="txtUserName" Background="#545d6a" Foreground="White" FontSize="18"></TextBox>
            <Label Content="Şifre:" Foreground="White"></Label>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"></PasswordBox>
            <Button Name="btnLogin" Click="btnLogin_Click" Margin="70 15" Content="Giriş" Background="#545d6a" 
                    Foreground="White" Height="46"></Button>
        </StackPanel>
    </Border>
</Window>
